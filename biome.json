{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "ignore": [
      "dist",
      "venv",
      ".aider*",
      "drizzle",
      "site/static/config-schema.json",
      "site/.docusaurus",
      "site/build",
      "examples/adaline-chat-history/prompt.json",
      "examples/adaline-embedding-similarity/prompt.json",
      "examples/multiple-turn-conversation/prompt.json",
      "examples/openai-chat-history/prompt.json",
      "examples/simple-test/output.html",
      ".coverage",
      "**/*tsconfig*.json",
      "**/ResultsTable.css",
      "**/*.module.css"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "bracketSpacing": true
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  }
}
